<!-- views/home.handlebars -->

{{!-- Define the layout to be used --}}
{{#layout 'main'}}
  {{!-- Set the page title --}}
  {{#set 'title'}}Tech Blog{{/set}}

  {{!-- Render the blog posts --}}
  {{#each posts}}
    <div>
      <h2>{{title}}</h2>
      <p>{{content}}</p>
      <p>By: {{user.username}}</p>
      <p>Date: {{createdAt}}</p>
    </div>
    <hr>
  {{/each}}

  {{!-- Render the link to go to the dashboard --}}
  {{#if logged_in}}
    <p><a href="/dashboard">Go to Dashboard</a></p>
  {{/if}}
{{/layout}}
